{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "lib/*": ["src/lib/*"],
            "@/*": ["src/*"]
        },
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
